@model Model.Ef.sys_center
<div class="row">

    <div class="col-lg-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <!-- /.card-tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body p-2">
                <div class="form-horizontal">
                    <input type="hidden" id="hid_id" value="@Model.id" />
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Mã chi nhánh <span style="color:red">*</span></label>
                        <div class="col-sm-9 controls">
                            <input type="text" class="form-control" id="txt_code" value="@Model.code" placeholder="Nhập mã chi nhánh">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Tên chi nhánh <span style="color:red">*</span></label>
                        <div class="col-sm-9 controls">
                            <input type="text" class="form-control" id="txt_name" value="@Model.name" placeholder="Nhập tên chi nhánh">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Số điện thoại</label>
                        <div class="col-sm-9 controls">
                            <input type="text" class="form-control" id="txt_mobile" value="@Model.mobile" placeholder="Nhập số điện thoại">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Địa chỉ</label>
                        <div class="col-sm-9 controls">
                            <textarea class="form-control" id="txt_address" placeholder="Địa chỉ">@Model.address</textarea>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Giám đốc</label>
                        <div class="col-sm-9 controls">
                            <input type="text" class="form-control" id="txt_director" value="@Model.director" placeholder="Nhập thông tin giám đốc">
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label">Brandname</label>
                        <div class="col-sm-9 controls">
                            <input type="text" class="form-control" id="txt_brandname" value="@Model.brandname" placeholder="Nhập thông tin brandname">
                        </div>
                    </div>
                    <div class="form-group row justify-content-center">
                        <div class="col-sm-4 col-md-offset-4">
                            <button type="button" class="btn btn-success" onclick="SaveInfo()"><i class="fa fa-save"></i>&nbsp;Lưu thông tin</button>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.card-body -->
            
        </div>
    </div>
</div>

