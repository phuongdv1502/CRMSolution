
@{
    ViewBag.Title = "Lịch hẹn lễ tân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section header{
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Library</a></li>
            <li class="breadcrumb-item active" aria-current="page">Data</li>
        </ol>
    </nav>
}
<style>
    .col-lg-1-custom {
        position: relative;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
        float: left;
        width: 6%;
    }

    .col-lg-2-custom {
        position: relative;
        min-height: 1px;
        padding-right: 15px;
        padding-left: 15px;
        float: left;
        width: 12.66%;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <!-- /.card-tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body p-2">
                <div class="form-horizontal">
                    <div class="form-group row">
                        <label class="col-form-label col-lg-1">Chi nhánh:</label>
                        <div class="col-lg-2 ">
                            @(Html.Action("GetAllCenter", "Common", new { id = "cbx-center", idSelected = ViewBag.id_center }))
                        </div>
                        <label class="col-form-label col-lg-1 ">Từ ngày:</label>
                        <div class="col-lg-2 ">
                            <div class="input-group date" id="reservationdate" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" id="txt_startdate" value="@DateTime.Now.ToString("dd-MM-yyyy")" data-target="#reservationdate" />
                                <div class="input-group-append" data-target="#reservationdate" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        <label class="col-form-label col-lg-1">Đến ngày:</label>
                        <div class="col-lg-2">
                            <div class="input-group date" id="reservationdate2" data-target-input="nearest">
                                <input type="text" class="form-control datetimepicker-input" id="txt_enddate" value="@DateTime.Now.ToString("dd-MM-yyyy")" data-target="#reservationdate2" />
                                <div class="input-group-append" data-target="#reservationdate2" data-toggle="datetimepicker">
                                    <div class="input-group-text"><i class="fa fa-calendar"></i></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-2">
                            <button class="btn btn-primary"><i class="fa fa-filter"></i>&nbsp;&nbsp;Tìm kiếm</button>
                        </div>

                    </div>
                </div>
            </div>
            <!-- /.card-body -->

        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <!-- /.card-tools -->
            </div>
            <!-- /.card-header -->
            <div class="card-body p-2">
                @Html.Action("ListAppointment")
            </div>
            <!-- /.card-body -->

        </div>
    </div>
</div>



<script>
    $(document).ready(function () {
        $('#txt_startdate').datepicker({
            autoclose: true,

            todayHighlight: true,
            format: 'dd-mm-yyyy',
        });
        $('#txt_enddate').datepicker({
            autoclose: true,

            todayHighlight: true,
            format: 'dd-mm-yyyy',
        });
    });
    function LoadPartial() {
        LoadPartialViewNoData("/Reception/ListAppointment", $('#tab21'));
    }
</script>
